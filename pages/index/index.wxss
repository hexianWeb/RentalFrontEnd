.container .index_swiper swiper {
  margin-top: 20rpx;
}
.container .index_swiper .slide-image {
  width: 100%;
  height: 100%;
  box-shadow: 2px 2px 10px #ccc;
}
.container .index_swiper .zoom-out {
  transform: scale(0.8);
  transition: all 0.7s ease-out 0s;
}
.container .index_swiper .zoom-in {
  transform: scale(1);
  transition: all 0.7s ease-in 0s;
}
.container .ad_zhuye {
  margin: 30rpx 0rpx 15rpx 0;
  padding: 0 10rpx;
  display: flex;
  justify-content: space-around;
}
.container .ad_zhuye .one_item {
  text-align: center;
  font-size: 28rpx;
  color: #676565;
}
.container .ad_zhuye .one_item .img {
  border-radius: 50%;
  box-shadow: 2px 2px 10px #ccc;
}
.container .ad_zhuye .one_item .img image {
  width: 336rpx;
  height: 165rpx;
}
.container .ad_zhuye .one_item .img:hover {
  box-shadow: 2px 2px 10px #1a1a1a;
}
.container .showPic {
  height: 340rpx;
  margin: 0 15rpx;
  display: flex;
}
.container .showPic .l_content {
  margin-right: 15rpx;
  flex: 1;
  height: 100%;
  overflow: hidden;
}
.container .showPic .l_content image {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.container .showPic .r_content {
  margin-left: 15rpx;
  flex: 1;
  display: flex;
  flex-wrap: none;
  flex-direction: column;
  height: 100%;
}
.container .showPic .r_content .top_content {
  overflow: hidden;
  flex: 1;
}
.container .showPic .r_content .top_content image {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.container .showPic .r_content .bottom_content {
  flex: 1;
  overflow: hidden;
}
.container .showPic .r_content .bottom_content image {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.container .goodslist .goods_item {
  padding: 12rpx;
}
.container .goodslist .goods_item .title {
  font-size: 33rpx;
  font-weight: 550;
  color: #1a1a1a;
  margin-bottom: 35rpx;
  margin-left: 15rpx;
}
.container .goodslist .goods_item .title .desc {
  margin-top: 8rpx;
  font-size: 26rpx;
  font-weight: lighter;
  color: #999;
}
.container .goodslist .goods_item .title .icon {
  text-align: center;
  margin-right: 25rpx;
  font-size: 26rpx;
  color: #999;
  float: right;
}
.container .goodslist .goods_item .top_content {
  border-radius: 15rpx;
  width: calc(100%-12rpx);
  height: 360rpx;
  margin: 13rpx;
  box-shadow: 2px 2px 10px 2px #ccc;
  overflow: hidden;
}
.container .goodslist .goods_item .top_content image {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.container .goodslist .goods_item .bot_content .desc {
  padding-top: 8rpx;
  font-size: 30rpx;
}
.container .goodslist .goods_item .bot_content .bot_desc {
  display: flex;
}
.container .goodslist .goods_item .bot_content .bot_desc .tag {
  flex: 1;
  display: flex;
  padding-top: 10rpx;
}
.container .goodslist .goods_item .bot_content .bot_desc .tag van-tag {
  padding-right: 15rpx;
  justify-content: flex-start;
}
.container .goodslist .goods_item .bot_content .bot_desc .tag .price {
  flex: 1;
  padding-right: 20rpx;
  color: #AA8971;
}
