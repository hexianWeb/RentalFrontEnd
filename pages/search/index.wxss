.container .ad_text {
  margin: 20rpx;
  font-size: 36rpx;
  font-weight: 550;
}
.container .ad_zhuye {
  margin: 30rpx 0rpx 15rpx 0;
  padding: 0 10rpx;
  display: flex;
  justify-content: space-around;
}
.container .ad_zhuye .one_item {
  background-color: #F44321;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  border-radius: 5%;
  width: 336rpx;
  height: 165rpx;
  line-height: 165rpx;
  font-weight: 550;
}
.container .ad_zhuye .two_item {
  background-color: #FEB511;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  border-radius: 5%;
  width: 336rpx;
  height: 165rpx;
  line-height: 165rpx;
  font-weight: 550;
}
.container .slider {
  margin-top: 80rpx;
  height: 225rpx;
}
.container .slider .rentNumber {
  display: flex;
  padding: 20rpx;
  font-size: 31rpx;
}
.container .slider .rentNumber .left {
  float: left;
  flex: 1;
}
.container .slider .rentNumber .right {
  float: right;
}
.container .slider .bottom {
  margin: 20rpx;
  display: flex;
}
.container .slider .bottom van-button {
  margin: 0 auto;
  flex: 1;
}
.container .toolbar {
  background-color: #ee0a24;
}
.container .toolbar van-tabs {
  width: 100%;
}
.container .goodslist .goods_item {
  padding: 12rpx;
}
.container .goodslist .goods_item .title {
  font-size: 33rpx;
  font-weight: 550;
  color: #1a1a1a;
  margin-bottom: 35rpx;
  margin-left: 15rpx;
}
.container .goodslist .goods_item .title .desc {
  margin-top: 8rpx;
  font-size: 26rpx;
  font-weight: lighter;
  color: #999;
}
.container .goodslist .goods_item .title .icon {
  text-align: center;
  margin-right: 25rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: #1a1a1a;
  float: right;
}
.container .goodslist .goods_item .top_content {
  border-radius: 15rpx;
  width: calc(100%-12rpx);
  height: 360rpx;
  margin: 13rpx;
  box-shadow: 2px 2px 10px 2px #ccc;
  overflow: hidden;
}
.container .goodslist .goods_item .top_content image {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.container .goodslist .goods_item .bot_content .desc {
  padding-top: 8rpx;
  font-size: 30rpx;
}
.container .goodslist .goods_item .bot_content .bot_desc {
  display: flex;
}
.container .goodslist .goods_item .bot_content .bot_desc .tag {
  flex: 1;
  display: flex;
  padding-top: 10rpx;
}
.container .goodslist .goods_item .bot_content .bot_desc .tag van-tag {
  padding-right: 6rpx;
  justify-content: flex-start;
}
.container .goodslist .goods_item .bot_content .bot_desc .tag .price {
  flex: 1;
  padding-right: 20rpx;
  color: #AA8971;
}
